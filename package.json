{
  "name": "@ilya_burlak/ui-kit",
  "version": "0.1.2",
  "description": "A small React + TypeScript UI Kit with SCSS components",
  "type": "module",
  "scripts": {
    "dev": "vite",
  "build": "vite build && npm run build:types",
  "build:types": "tsc -p tsconfig.build.json",
    "preview": "vite preview",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,scss,json,md}\"",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint",
    "fix": "npm run lint:fix && npm run format",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "npm run build"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
  "@storybook/react-vite": "^9.1.13",
  "@storybook/addon-docs": "^9.1.13",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "eslint-plugin-storybook": "^9.1.13",
  "globals": "^16.4.0",
  "storybook": "^9.1.13",
  "prettier": "^3.0.0",
  "sass": "^1.72.0",
    
    "typescript": "~5.9.3",
    "vite": "^7.1.7"
  }

  ,
  "files": [
    "dist",
    "index.d.ts"
  ],
  "sideEffects": [
    "dist/ui-kit.css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/IlyaBurlak/Ui-Kit.git"
  },
  "keywords": ["ui","react","typescript","scss","components"],
  "author": "Ilya Burlak <ilya.burlak.dev@mail.ru>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  }
}
